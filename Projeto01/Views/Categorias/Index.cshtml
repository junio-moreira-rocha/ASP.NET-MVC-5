@model IEnumerable<Modelo.Tabelas.Categoria>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Categorias";
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Categorias registradas
    </div>
    <div class="panel-body">
        <table id="mytable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", new { id = item.CategoriaId }) |
                            @Html.ActionLink("Mais detalhes", "Details", new { id = item.CategoriaId }) |
                            @Html.ActionLink("Deletar", "Delete", new { id = item.CategoriaId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Registrar uma nova Categoria", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>
@section ScriptPage{
    <script>
        $(document).ready(function () {
            $('#mytable').DataTable({ "order": [[1, "asc"]] });
            $('li').removeClass("active");
            $('#liCategorias').addClass("active");
        });
    </script>
}
